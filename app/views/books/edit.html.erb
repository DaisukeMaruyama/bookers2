<div class="container">
  <% if @book.errors.any? %>
    <div class="error-explanation">
      <h3><%= @book.errors.count %> errors prohibited this book from being saved</h3>
      <% @book.errors.full_messages.each do |message| %>
      <ul>
        <li><%= message %></li>
      </ul>
      <% end %>
    </div>
  <% end %>
  <div class="row">
    <div class="col-5 mx-auto pt-3">
      <h1>Editing Book</h1>

      <%= form_with model: @book,local:true do |f| %>

         <div class="field">
            <%= f.label :title %><br />
            <%= f.text_field :title, class: "edit-title" %>
          </div>
          <div class="field">
            <%= f.label :opinion %><br />
            <%= f.text_area :body, class: "edit-body" %>
          </div>
          <div class="action">
            <%= f.submit "Update Book", class: "sign-up" %>
          </div>
      <% end %>

      <p class="show-back">
        <%= link_to 'Show', book_path(@book) %>
        |
        <%= link_to 'Back', books_path %>
      </p>

    </div>
  </div>
</div>