<div class="container">
  <div class="row">
    <div class="col-5 mx-auto pt-3">
      <h1>Editing User</h1>

      <%= form_with model: @user,local: true do |f| %>
         
         <% if @user.errors.any? %>
          <div class="error-explanation">
            <h3><%= @user.errors.count %> errors prohibited this book from being saved</h3>
            <% @user.errors.full_messages.each do |message| %>
            <ul>
              <li><%= message %></li>
            </ul>
            <% end %>
          </div>
        <% end %>

         <div class="field">
            <%= f.label :name %><br />
            <%= f.text_field :name, class: "edit-title" %>
          </div>
          <div class="field">
            <%= f.label :picture %><br />
            <%= f.attachment_field :profile_image, class: "edit-body" %>
          </div>
          <div class="field">
            <%= f.label :introduction %><br />
            <%= f.text_area :introduction, class: "edit-body" %>
          </div>
          <div class="action">
            <%= f.submit "Update User", class: "sign-up btn-secondary" %>
          </div>
      <% end %>

      <div class="show-back">

      </div>

    </div>
  </div>
</div>

