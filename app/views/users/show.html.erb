          </tr>
          <tr>
    	      <th>introduction</th>
    	      <th><%= @user.introduction %></th>
          </tr>
        </table>
  
      <%= link_to (edit_user_path(current_user)) do %>
        <span class="btn btn-outline-secondary btn-block fas fa-user-cog"></span>
      <% end %>

      <h2 class="mt-3">New book</h2>
      <%= form_with model: @user, url:user_registration_path, local:true do |f| %>
          <div class="field">
            <%= f.label :name %><br />
            <%= f.text_field :name, autofocus: true, autocomplete: "email" %>
          </div>
          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>
          <div class="action">
            <%= f.submit "Sign up", class: "sign-up" %>
          </div>
      <% end %>
      
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
    <table class='table table-hover table-inverse'>
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><a href="/users/16465">
            <img class="attachment user profile_image fallback" src="/assets/no-image-icon-d3f9e11cb2bb284b42e0810f94b03c50126f51f482ea43054b87c2b7ebaa01d5.jpg" /></a></td>
          <td><a class="book_13933" href="/books/13933">dd</a></td>
          <td>dd</td>
        </tr>
      </tbody>
    </table>
    </div>
  </div>
</div>
