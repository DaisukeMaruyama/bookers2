<div class='container px-5 pt-3 px-sm-0'>
  <% if @book.errors.any? %>
    <div class="error-explanation">
      <h3><%= @book.errors.count %> errors prohibited this book from being saved</h3>
      <% @book.errors.full_messages.each do |message| %>
      <ul>
        <li><%= message %></li>
      </ul>
      <% end %>
    </div>
  <% end %>
  <div class='row'>
    <div class='col-md-3'>
        <h2>User info</h2>
        <table class='table'>
          <tr><span><%= attachment_image_tag @user, :profile_image, :fill,90,90, format: 'jpeg', fallback: "no_image.jpg",size:"90Ã—90" %></span></tr>
          <tr>
          	<th>name</th>
          	<th><%= @user.name %></th>
          </tr>
          <tr>
    	      <th>introduction</th>
    	      <th><%= @user.introduction %></th>
          </tr>
        </table>

      <%= link_to (edit_user_path(@user)) do %>
        <span class="btn btn-outline-secondary btn-block fas fa-user-cog"></span>
      <% end %>

      <h2 class="mt-3">New book</h2>
      <%= form_with model: @book,local:true do |f| %>

          <div class="field">
            <%= f.label :title %><br />
            <%= f.text_field :title, class: "edit-title" %>
          </div>
          <div class="field">
            <%= f.label :opinion %><br />
            <%= f.text_area :body, class: "edit-body" %>
          </div>
          <div class="action">
            <%= f.submit "Create Book", class: "sign-up" %>
          </div>
      <% end %>
    </div>

    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
        <table class='table table-hover table-inverse'>
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
        <tbody>
   			  <% @user.books.each do |book| %>
  				<tr class="new-table">
            <td><span><%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg", size:'40x40' %></span></td>
  					<td><span><%= book.title %></span></td>
  					<td><span><%= book.body %></span></td>
  				</tr>
			    <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
