<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>
<div class='container px-5 pt-3 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
        <h2>User info</h2>
        <table class='table'>
          <tr><span><%= attachment_image_tag @user, :profile_image, size:'40Ã—40', format: 'jpeg', fallback: "no_image.jpg" %></span></tr>
          <tr>
          	<th>name</th>
          	<th><%= current_user.name %></th>
          </tr>
          <tr>
    	      <th>introduction</th>
    	      <th><%= current_user.introduction %></th>
          </tr>
        </table>

        <%= link_to (edit_user_path(current_user)) do %>
          <span class="btn btn-outline-secondary btn-block fas fa-user-cog"></span>
        <% end %>

        <h2 class="mt-3">New book</h2>
          <%= form_with model: @book, local:true do |f| %>
            <div class="field">
              <%= f.label :title %><br />
              <%= f.text_field :title, class: "edit-title" %>
            </div>
            <div class="field">
              <%= f.label :opinion %><br />
              <%= f.text_area :body, class: "edit-body"  %>
            </div>
            <div class="action">
              <%= f.submit "Create Book", class: "sign-up" %>
            </div>
          <% end %>
    </div>

    <div class='col-md-8 offset-md-1'>
      <h2>Users</h2>
      <table class='table'>
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @users.each do |user| %>
      			<tr class="new-table">
      				<td><span><%= attachment_image_tag user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" %></span></td>
      				<td><span><%= user.name %></span></td>
      				<td><span><%= link_to "show",user_path(user) %></span></td>
      			</tr>
      			<% end %>
         </tbody>

      </table>

    </div>
  </div>
</div>
